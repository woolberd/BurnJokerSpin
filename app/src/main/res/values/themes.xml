<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BurnJokerSpin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>

    <style name="button" parent="TextAppearance.Design.Tab">
        <item name="android:background">@drawable/button</item>
        <item name="layout_constraintDimensionRatio">832:186</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:padding">6sp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="balance" parent="TextAppearance.Design.Tab">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:padding">5sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="gameData" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="balls" parent="TextAppearance.Design.Tab">
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">40sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">13sp</item>
        <item name="android:textSize">33sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="cards" parent="TextAppearance.Design.Tab">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/card</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15sp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="background">@drawable/card</item>
        <item name="layout_constraintDimensionRatio">200:181</item>
    </style>
</resources>